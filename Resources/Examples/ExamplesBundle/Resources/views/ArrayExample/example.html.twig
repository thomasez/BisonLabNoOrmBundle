{% extends "BisonLabExamplesBundle::layout.html.twig" %}

{% block title "Example " ~ id %}

{% block content %}

{%- if id -%}

    <h1>Example {{ id }}</h1>
    <form action="{{ path('example_update',{'id': id}) }}" method="post" {{ form_enctype(form) }}>

{%- else -%}

    <h1>New Example</h1>
    <form action="{{ path('example_insert') }}" method="post" {{ form_enctype(form) }}>

{%- endif -%}
<table>
    {% for field in fields %}
      <tr>
      <th>
        {{ form_label(form[field]) }}:
      </th>
      <td>
        {{ form_errors(form[field]) }}
        {{ form_widget(form[field]) }}
      </td>
      </tr>
    {% endfor %}
</table>
      {{ form_rest(form) }}
      <input type="submit" />
    </form>

{% set code = code(_self) %}

{% endblock %}


